<mvc:View controllerName="flexso.controller.List"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId"
		toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->

		<!-- DynamicPage Content -->
		<f:content>
			<VBox id="_IDGenVBox1"
				fitContainer="true">
				
				<VBox id="_IDGenVBox2" alignItems="Start">
				<Button icon="sap-icon://world" press="onPress" id="button" ariaHasPopup="Menu"/>
				<Button id="MyEventsPage" text="Go to My Events" press="onNavigateToMyEvents" class="sapUiSmallMarginTop"/>
				</VBox>
				
				<Table id="eventsTable"
					inset="false"
					items="{eventModel>/Events}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns>
						<Column id="_IDGenColumn1" width="12em">
							<Text id="_IDGenText1" text="{i18n>evenement}"/>
						</Column>
						<Column id="_IDGenColumn2"	hAlign="End">
                  <Button id="addEvent"
                      text="+"
                      type="Emphasized"
                      press=".onAddEventPress"/> 
						</Column>
					
					</columns>
					<items>
						<ColumnListItem id="_IDGenColumnListItem1"
							type="Navigation"
							press="onListItemPress">
							<cells>
								<ObjectIdentifier id="_IDGenObjectIdentifier1"
									title="{path: 'naam', model: 'eventModel' }"
									text="{eventModel>eventID}"/>

							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>